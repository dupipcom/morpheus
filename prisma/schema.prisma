generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  entries    Entry[]
}

type Entry {
  days  Day[]
  weeks Week[]
  year Int
}

type Day {
  tasks Task[]
  earnings String
  availableBalance String
  date String
}

type Week {
  tasks  Task[]
  earnings String
  availableBalance String
  date String
}

type Task {
  category Category
  area Areas
  status Boolean
}

enum Areas {
  self
  home
  social
}

enum Category {
  body
  spirituality
  fun
  extra
  clean
  affection
  growth
  work
}