generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  userId             String
  providerType       String?
  type               String?
  provider           String
  providerAccountId  String
  refreshToken       String?
  access_token       String?
  token_type         String?
  scope              String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String?   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  entries       Json?
  availableBalance String?
}

type Mood {
  gratitude Int
  acceptance Int
  restedness Int
  tolerance Int
  selfEsteem Int
  trust Int
  text String
}

type Day {
  tasks Task[]
  earnings String
  date String
  status String
  mood Mood?
}

type Week {
  week String
  year  Int
  tasks  Task[]
  earnings String
  date String
  status String
  days Day[]
}

type Task {
  category Category
  area Areas
  status String
  cadence String
}

enum Areas {
  self
  home
  social
}

enum Category {
  body
  spirituality
  fun
  extra
  clean
  affection
  growth
  work
}