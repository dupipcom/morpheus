generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  entries       Json?
  settings      Settings?
  analysis      Json?
  availableBalance  String?
  hint String?
  userId        String?   @unique
}

type Settings {
  availableBalance String?
  monthsFixedIncome  String?
  monthsVariableIncome String?
  monthsNeedFixedExpenses String?
  monthsNeedVariableExpenses String?
  dailyTemplate Task[]
  weeklyTemplate Task[]
}

type Mood {
  gratitude Int
  optimism Int
  restedness Int
  tolerance Int
  selfEsteem Int
  trust Int
  text String
}

type Day {
  tasks Task[]
  earnings String
  date String
  status String
  mood Mood?
  hint String?
}

type Week {
  week String
  year  Int
  tasks  Task[]
  earnings String
  date String
  status String
  days Day[]
  hint String?
}

type Task {
  name String
  categories Category[]
  area Areas
  status String
  cadence String
  times Int
  count Int
}

enum Areas {
  self
  home
  social
}

enum Category {
  body
  spirituality
  fun
  extra
  clean
  affection
  maintenance
  community
  growth
  work
}