generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  entries       Json?
  settings      Settings?
  analysis      Json?
  availableBalance  String?
  stash         String?   @default("0")
  equity        String?   @default("0")
  totalEarnings String?   @default("0")
  hint String?
  userId        String?   @unique
  lastLogin     DateTime?
  contacts      Contact[]
  things        Thing[]
  lifeEvents    LifeEvent[]
  notes         Note[]
  profile       Profile?
  friends       String[]  @db.ObjectId
  closeFriends  String[]  @db.ObjectId
  friendRequests String[] @db.ObjectId
}

model Contact {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  email         String?
  phone         String?
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactionQuality Int? // Rating from 1-5
}

model Thing {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactionQuality Int? // Rating from 1-5
}

model LifeEvent {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  impact        Int? // Rating from 1-5
}

model Profile {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String    @unique @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName     String?
  lastName      String?
  userName      String?   @unique
  bio           String?
  profilePicture String?
  publicCharts  Json?     // Stores visibility settings for charts
  // Visibility settings for each field
  firstNameVisible     Boolean @default(false)
  lastNameVisible      Boolean @default(false)
  userNameVisible      Boolean @default(false)
  bioVisible           Boolean @default(false)
  profilePictureVisible Boolean @default(false)
  publicChartsVisible  Boolean @default(false)
}

model Note {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  content       String
  visibility    NoteVisibility @default(PRIVATE)
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  date          String?   // Optional date field to associate with specific day
}

type Settings {
  availableBalance String?
  monthsFixedIncome  String?
  monthsVariableIncome String?
  monthsNeedFixedExpenses String?
  monthsNeedVariableExpenses String?
}

type Mood {
  gratitude Int
  optimism Int
  restedness Int
  tolerance Int
  selfEsteem Int
  trust Int
  text String[]
}

type Day {
  tasks Task[]
  ephemeralTasks Task[]
  earnings String
  ticker Float?
  date String
  status String
  mood Mood?
  hint String?
  contacts ContactReference[]
  things ThingReference[]
  lifeEvents LifeEventReference[]
  availableBalance String?
}

type Week {
  week String
  year  Int
  tasks  Task[]
  ephemeralTasks Task[]
  earnings String
  ticker Float?
  date String
  status String
  days Day[]
  hint String?
  availableBalance String?
}

type Task {
  id String?
  name String
  categories Category[]
  area Areas
  status String
  cadence String
  times Int
  count Int?
  localeKey String?
  contacts ContactReference[]
  things ThingReference[]
  favorite Boolean?
  isEphemeral Boolean?
  createdAt String?
}

type ContactReference {
  id String
  name String
  interactionQuality Int?
}

type ThingReference {
  id String
  name String
  interactionQuality Int?
}

type LifeEventReference {
  id String
  name String
  impact Int?
}

enum Areas {
  self
  home
  social
}

enum Category {
  body
  spirituality
  fun
  extra
  clean
  affection
  maintenance
  community
  growth
  work
  mind
  spirit
  social
  home
  custom
  event
}

model Template {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  visibility    Visibility @default(PRIVATE)
  role          String?   // e.g., "default.daily", "default.weekly", "custom"
  owners        String[]  @db.ObjectId // User IDs
  tasks         Task[]    // Array of Task objects
  taskLists     TaskList[] // TaskLists that use this template
}

model TaskList {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  visibility    Visibility @default(PRIVATE)
  role          String?   // e.g., "daily.default", "weekly.default", "custom"
  budget        String?
  dueDate       String?
  owners        String[]  @db.ObjectId // User IDs
  collaborators String[]  @db.ObjectId // User IDs
  managers      String[]  @db.ObjectId // User IDs
  publicUrl     String?
  ticker        String?
  progress      String?
  templateId    String?   @db.ObjectId // Reference to Template
  template      Template? @relation(fields: [templateId], references: [id])
  tasks         Task[]    // Array of Task objects
}

enum Visibility {
  PUBLIC
  PRIVATE
  FRIENDS
  CLOSE_FRIENDS
}

enum NoteVisibility {
  PRIVATE
  FRIENDS
  CLOSE_FRIENDS
  PUBLIC
  AI_ENABLED
}