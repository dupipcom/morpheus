generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  entries       Json?
  settings      Settings?
  analysis      Json?
  availableBalance  String?
  stash         String?   @default("0")
  equity        String?   @default("0")
  totalEarnings String?   @default("0")
  hint String?
  userId        String?   @unique
  lastLogin     DateTime?
  contacts      Contact[]
  things        Thing[]
  lifeEvents    LifeEvent[]
  profile       Profile?
  friends       String[]  @db.ObjectId
  closeFriends  String[]  @db.ObjectId
  friendRequests String[] @db.ObjectId
}

model Contact {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  email         String?
  phone         String?
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactionQuality Int? // Rating from 1-5
}

model Thing {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactionQuality Int? // Rating from 1-5
}

model LifeEvent {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  notes         String?
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  impact        Int? // Rating from 1-5
}

model Profile {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String    @unique @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName     String?
  lastName      String?
  userName      String?   @unique
  bio           String?
  profilePicture String?
  publicCharts  Json?     // Stores visibility settings for charts
  // Visibility settings for each field
  firstNameVisible     Boolean @default(false)
  lastNameVisible      Boolean @default(false)
  userNameVisible      Boolean @default(false)
  bioVisible           Boolean @default(false)
  profilePictureVisible Boolean @default(false)
  publicChartsVisible  Boolean @default(false)
}

type Settings {
  availableBalance String?
  monthsFixedIncome  String?
  monthsVariableIncome String?
  monthsNeedFixedExpenses String?
  monthsNeedVariableExpenses String?
  dailyTemplate Task[]
  weeklyTemplate Task[]
}

type Mood {
  gratitude Int
  optimism Int
  restedness Int
  tolerance Int
  selfEsteem Int
  trust Int
  text String
}

type Day {
  tasks Task[]
  ephemeralTasks Task[]
  earnings String
  date String
  status String
  mood Mood?
  hint String?
  contacts ContactReference[]
  things ThingReference[]
  lifeEvents LifeEventReference[]
}

type Week {
  week String
  year  Int
  tasks  Task[]
  ephemeralTasks Task[]
  earnings String
  date String
  status String
  days Day[]
  hint String?
}

type Task {
  id String?
  name String
  categories Category[]
  area Areas
  status String
  cadence String
  times Int
  count Int?
  localeKey String?
  contacts ContactReference[]
  things ThingReference[]
  favorite Boolean?
  isEphemeral Boolean?
  createdAt String?
}

type ContactReference {
  id String
  name String
  interactionQuality Int?
}

type ThingReference {
  id String
  name String
  interactionQuality Int?
}

type LifeEventReference {
  id String
  name String
  impact Int?
}

enum Areas {
  self
  home
  social
}

enum Category {
  body
  spirituality
  fun
  extra
  clean
  affection
  maintenance
  community
  growth
  work
  mind
  spirit
  social
  home
  custom
  event
}