  AZN
}

enum NoteVisibility {
  PRIVATE
  FRIENDS
  CLOSE_FRIENDS
  PUBLIC
  AI_ENABLED
}

enum ProfileVisibility {
  PRIVATE
  FRIENDS
  CLOSE_FRIENDS
  PUBLIC
  AI_ENABLED
}

enum UserRole {
  OWNER
  MANAGER
  COLLABORATOR
  FOLLOWER
}

enum Visibility {
  PUBLIC
  PRIVATE
  FRIENDS
  CLOSE_FRIENDS
  HIDDEN
}
